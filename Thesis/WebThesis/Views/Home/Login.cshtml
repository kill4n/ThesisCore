@model LoginViewModel
@{
    ViewBag.Title = "Inicio de sesion";

}
<section>
    <div class="d-flex justify-content-center">
        <div class="card col-md-10" style="height: 100%;">
            <div class="row">
                <div class="col-sm">
                    <h2 class="text-center text-info text_title">@ViewBag.Title</h2>
                </div>
            </div>
            <div class="row col-12 d-flex justify-content-center ">
                @using (Html.BeginForm(FormMethod.Post, new { @class = "row col-12 d-flex justify-content-center" }))
                {
                    <div class="row col-12 d-flex justify-content-center ">
                        <div class="form-group col-12 align-items-center">
                            <div class="form-row justify-content-center">
                                @Html.LabelFor(model => model.UserName, new { @class = "text-center" })
                            </div>
                            <div class="form-row">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "col-12" })
                                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "test alert alert-danger" })
                            </div>

                            <div class="form-row justify-content-center">
                                @Html.LabelFor(model => model.Password, new { @class = "text-center" })
                            </div>
                            <div class="form-row">
                                @Html.EditorFor(model => model.Password, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        placeholder = "Contraseña"
                                    }
                                })
                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "test alert alert-danger" })
                            </div>
                            <div class="form-row justify-content-center " style="margin-top:10px;">
                                <input class="col-12" type="submit" value="Enviar" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<style>
    .field-validation-valid {
        padding: 0 !important;
        margin: 0 !important;
        display: none !important;
    }
</style>